# Matrix client configuration
MATRIX_HOMESERVER_URL=https://your-homeserver.org
MATRIX_ACCESS_TOKEN=your_access_token
MATRIX_USER_ID=@yourusername:your-homeserver.org

# Room IDs
MONITORED_ROOM_ID=!your_monitored_room_id:your-homeserver.org
FORWARDING_ROOM_ID=!your_forwarding_room_id:your-homeserver.org

